endsnippet
snippet strectangle "strectangle" w
	\\shade[top color=${1}, bottom color=${2}] (${3}) rectangle (${4});
endsnippet
snippet starc "starc" w
	\\shade[top color=${1}, bottom color=${2}] (${3})--(${4}) arc [start angle=${5},end angle=${6}, radius=${7}];
endsnippet

