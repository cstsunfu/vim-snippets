snippet fcircle "draw a circle by tikz" w
	\\fill[${1}] (${2}) circle [radius=${4}];
endsnippet
snippet fcycle "draw a circle by tikz" w
	\\fill[${1}] (${2}) -- cycle;
endsnippet
snippet fellipse "draw a ellipse by tikz" w
	\\fill[${1}] (${2}) ellipse (${3} and ${4});
endsnippet
snippet frectangle "draw a rectangle by tikz" w
	\\fill[${1}] (${2}) rectangle (${4});
endsnippet

snippet farc "draw a arc" w
	\\fill[${1}] (${2})--(${3}) arc [start angle=${4},end angle=${5}, radius=${6}];
endsnippet

snippet pinter "path intersections" w
	\\path[name intersections={of=${1}, by={[label=${2:above}:\$${3}\$]$3}}];
endsnippet
snippet pedge "path edge" w
	\\path (${1}) edge[${2}] (${3});${0}
endsnippet
# shade  top to bottom
snippet stcircle "stcircle " w
	\\shade[top color=${1}, bottom color=${2}] (${3}) circle [radius=${4}];
endsnippet
snippet stellipse "stellipse " w
