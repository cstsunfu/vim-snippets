snippet dcircle "draw a circle by tikz" w
	\\draw[${1}] (${2}) circle [radius=${4}];
endsnippet

# draw
snippet dellipse "draw a ellipse by tikz" w
	\\draw[${1}] (${2}) ellipse (${3} and ${4});
endsnippet
snippet darc "draw a arc" w
	\\draw[${1}] (${2}) arc [start angle=${4},end angle=${5}, radius=${6}];
endsnippet
snippet node "input a node" w
	\\node[${1}](${2}) at (${3}) \{${4}\};
endsnippet
snippet dgrid "draw a grid by tikz" w
	\\draw[step=${1:.5cm},${2:gray},${3:very thin}] (${4},$4) grid (${5},$5);
endsnippet
snippet drectangle "draw a rectangle by tikz" w
	\\draw[${1}] (${2}) rectangle (${4});
endsnippet
snippet dparabola "draw a parabola by tikz" w
	\\draw[${1}] (${2}) parabola (${4});
endsnippet
snippet dline "draw a line by tikz" w
	\\draw[${1}] (${2}) -- (${4});
endsnippet
snippet dnode "draw a node by tikz" w
	\\draw (${1}) node[${2}]{${3}};
endsnippet
snippet ts "tikzstyle" w
	\\tikzstyle{${1}} = [${2}]
	${0}
endsnippet
snippet cd "coordinate" w
	\\coordinate[label=${1:left}:\textcolor{${2:black}}{${3}}] (${4}) at (${5});
	${0}
endsnippet
snippet for "foreach" w
	\\foreach \\i in {${1}}
	${0}
endsnippet
